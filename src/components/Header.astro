---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { languages, defaultLang, getTextDirection } from '../i18n/locales';
import type { LanguageCode } from '../i18n/locales';

interface Props {
    lang?: LanguageCode;
}

const { lang = defaultLang } = Astro.props;
const textDir = getTextDirection(lang);
const isRTL = textDir === 'rtl';

console.log('ðŸ” Header - lang:', lang, 'textDir:', textDir, 'isRTL:', isRTL);

const languageList = Object.entries(languages).map(([code, name]) => ({
    code: code as LanguageCode,
    name,
}));

// Get current slug to maintain it when switching languages
const currentPath = Astro.url.pathname;
const pathParts = currentPath.split('/').filter(Boolean);
// Remove language code to get the slug
const slug = pathParts.slice(1).join('/');
---

<header>
      <nav style={isRTL 
          ? 'display: flex; flex-direction: row-reverse;' 
          : 'display: flex;'
      }>
        {isRTL ? (
            <>
                <div class="social-links">
                    <a href="https://twitter.com/gpuflow" target="_blank" rel="noopener">
                        <span class="sr-only">Twitter</span>
                        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                            <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                        </svg>
                    </a>
                </div>
                <div class="internal-links">
                    <HeaderLink href={`/${lang}/`}>Blog</HeaderLink>
                    <HeaderLink href={`/${lang}/`}>Home</HeaderLink>
                </div>
                <select 
                    class="lang-select"
                    onchange={`window.location.href='/' + this.value + '/${slug}'`}
                >
                    {languageList.map(({ code, name }) => (
                        <option value={code} selected={code === lang}>
                            {name}
                        </option>
                    ))}
                </select>
                <h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
            </>
        ) : (
            <>
                <h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
                <select 
                    class="lang-select"
                    onchange={`window.location.href='/' + this.value + '/${slug}'`}
                >
                    {languageList.map(({ code, name }) => (
                        <option value={code} selected={code === lang}>
                            {name}
                        </option>
                    ))}
                </select>
                <div class="internal-links">
                    <HeaderLink href={`/${lang}/`}>Home</HeaderLink>
                    <HeaderLink href={`/${lang}/`}>Blog</HeaderLink>
                </div>
                <div class="social-links">
                    <a href="https://twitter.com/gpuflow" target="_blank" rel="noopener">
                        <span class="sr-only">Twitter</span>
                        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                            <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                        </svg>
                    </a>
                </div>
            </>
        )}
    </nav>
</header>

<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    
    nav {
        display: grid;
        grid-template-columns: auto auto 1fr auto auto;
        align-items: center;
        gap: 0.5rem;
    }
    
    /* First child gets pushed to one side */
    nav > :first-child {
        margin-inline-end: auto;
    }
    
    h2 {
        margin: 0;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    
    .lang-select {
        padding: 0.5rem 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        background: #fff;
        font-size: 0.875rem;
        cursor: pointer;
    }
    
    .internal-links {
        display: flex;
        gap: 0.25rem;
    }
    
    nav a {
        padding: 1em 0.5em;
        color: var(--black);
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }
    
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
    
    .social-links,
    .social-links a {
        display: flex;
    }
    
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
</style>
